{
  "name": "orderflow-backend",
  "version": "2.0.0",
  "description": "Sistema de autoatendimento para lanchonete seguindo Clean Architecture e Clean Code",
  "main": "dist/infrastructure/http/server.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/infrastructure/http/index.js",
    "dev": "npx ts-node-dev --respawn --transpile-only src/infrastructure/http/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "npm run typeorm migration:run -- -d src/infrastructure/database/postgres/data-source.ts",
    "migration:generate": "npm run typeorm migration:generate -- -d src/infrastructure/database/postgres/data-source.ts",
    "migration:create": "npm run typeorm migration:create",
    "migration:revert": "npm run typeorm migration:revert -- -d src/infrastructure/database/postgres/data-source.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipegraf/OrderFlow.git"
  },
  "keywords": [
    "orderflow",
    "clean-architecture",
    "clean-code",
    "typescript",
    "postgresql",
    "kubernetes",
    "aws-eks"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.20",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/pg": "^8.15.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.22.0",
    "swagger-ui-express": "^5.0.1",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0"
  }
}