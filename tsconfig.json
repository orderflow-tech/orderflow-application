{
  "compilerOptions": {
    "target": "ES2022",                 
    "module": "CommonJS",                 
    "outDir": "dist",                   
    "rootDir": "src",                    
    "strict": true,                          
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                 
    "sourceMap": true,                   
    "resolveJsonModule": true,              
    "experimentalDecorators": true,         
    "emitDecoratorMetadata": true,         
    "incremental": true                    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
